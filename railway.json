{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "DEBUG": "false",
        "HOST": "0.0.0.0",
        "PORT": "$PORT",
        "API_TITLE": "Blog Writer SDK API",
        "API_VERSION": "1.0.0",
        "API_DESCRIPTION": "A powerful REST API for AI-driven blog writing with advanced SEO optimization",
        "DEFAULT_TONE": "professional",
        "DEFAULT_LENGTH": "medium",
        "ENABLE_SEO_OPTIMIZATION": "true",
        "ENABLE_QUALITY_ANALYSIS": "true",
        "BATCH_MAX_CONCURRENT": "5",
        "BATCH_MAX_RETRIES": "2",
        "RATE_LIMIT_REQUESTS_PER_MINUTE": "60",
        "RATE_LIMIT_REQUESTS_PER_HOUR": "1000",
        "RATE_LIMIT_REQUESTS_PER_DAY": "10000",
        "LOG_LEVEL": "info",
        "LOG_FORMAT": "json",
        "METRICS_RETENTION_HOURS": "24",
        "OPENAI_DEFAULT_MODEL": "gpt-4o-mini",
        "ANTHROPIC_DEFAULT_MODEL": "claude-3-5-haiku-20241022",
        "AZURE_OPENAI_API_VERSION": "2024-02-15-preview",
        "AZURE_OPENAI_DEFAULT_MODEL": "gpt-4o-mini",
        "ALLOWED_ORIGINS": "http://localhost:3000,https://localhost:3000"
      }
    }
  }
}